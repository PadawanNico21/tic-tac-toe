{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@tictactoe/authorization": ["libs/authorization/src/index.ts"],
            "@tictactoe/backend-configuration": [
                "libs/backend-configuration/src/index.ts"
            ],
            "@tictactoe/cryptography": ["libs/cryptography/src/index.ts"],
            "@tictactoe/models": ["libs/models/src/index.ts"],
            "@tictactoe/prisma-schemas": ["libs/prisma-schemas/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
